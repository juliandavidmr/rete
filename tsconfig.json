{
    "compilerOptions": {
        "declaration": true,
        "resolveJsonModule": true,
        "declarationDir": "./dist",
        "module": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "target": "es5",
        "composite": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "build/**/*.d.ts"
        ]
    },
    "include": [
        "src/**/*", "rollup.config.js"
    ],
    "exclude": ["node_modules"]
}